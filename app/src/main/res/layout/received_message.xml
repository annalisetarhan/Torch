<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="message" type="String"/>
        <variable name="user_id" type="String"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@{message}"
            tools:text="Hello!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_textview"
            android:maxWidth="240dp"
            android:layout_margin="4dp"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user_id, default=e3fc0377}"
            android:textSize="12sp"
            android:id="@+id/time_stamp_textview"
            app:layout_constraintBottom_toBottomOf="@+id/message_textview"
            app:layout_constraintStart_toEndOf="@+id/message_textview" android:layout_marginStart="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>